<div class="container">
  <div class="row">
    <div class="col-lg-4" style="background-color: #CCFF99;">
      <h2>User info</h2>

      <h2 class="index-new">New book</h2>

	<%= form_for(@book) do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title , class:"book-title" ,size: "50*10" %>
    <h4>Opinion</h4>
    <%= f.text_area :body  , class:"book-body"  , size: "50*10" %>
    <button class="btn btn-primary btn-block">Create box</button>

	<% end %>

    </div>
    <div class="col-lg-8" style="background-color: #FFCC99	;">
    	<h2>Book detail</h2>
      <table class="table table-striped">
          <thead>
            <tr>
            	<th>id</th>
              	<th>Title</th>
             	<th>Body</th>
            </tr>
          </thead>
        </div>
      </div>
        <tbody>
          <% @books.each do |book| %>
            <tr>
            	<td></td>
              	<td><%= link_to book.title, book_path(book.id) , class:"book_#{book.id}" %></td>
              	<td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
</div>