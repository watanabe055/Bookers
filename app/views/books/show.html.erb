<%= render 'books/list', new_book: @new_book, user: @user, book: @book %>
    <div class="col-lg-8">
    	<h2>Book detail</h2>
      <table class="table table-striped">
          <thead>
            <tr>
            	<th></th>
              	<th>Title</th>
             	<th>Body</th>
              	<th colspan="2"></th>
            </tr>
          </thead>
        </div>
      </div>
        <tbody>
            <tr>
            	<td width="40px"><%= attachment_image_tag @book.user,  :profile_image, :fill, 40, 40, format: 'jpeg' ,fallback: "noimage.jpg" ,size: "40*40" %>
              <%= link_to @book.user.name, user_path(@book.user) %>
              </td>
              	<td><%= link_to @book.title, book_path(@book.id) %></td>
              	<td><%= @book.body %></td>
              	<td>
                  <% if @book.user == current_user %>
                    <%= link_to "Edit", edit_book_path(@book.id) , class: "btn btn-success" %>
                  <% end %>
                </td>
				        <td>
                  <% if @book.user == current_user %>
                    <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか?" ,class: "btn btn-danger" %>
                  <% end %>
                </td>
            </tr>
        </tbody>
      </table>
</div>